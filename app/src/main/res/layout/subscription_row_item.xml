<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/d6"
    app:cardElevation="@dimen/d2"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@android:color/white"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_margin="@dimen/d10"
    >
    <RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/product_name"
        style="@style/Wrap"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginLeft="@dimen/d16"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/sub_id"
        style="@style/Wrap"
        android:layout_marginLeft="@dimen/d16"
        android:textColor="@android:color/black"
        android:text="@string/subscription_id"
        android:layout_marginTop="@dimen/d10"
        android:layout_below="@id/product_name"/>
    <TextView
        android:id="@+id/sub_id_val"
        style="@style/title"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/d10"
        android:layout_below="@id/product_name"
        android:layout_toRightOf="@id/sub_id"/>
    <TextView
        android:id="@+id/balance"
        style="@style/Wrap"
        android:layout_marginLeft="@dimen/d16"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/d10"
        android:text="@string/data_bal"
        android:layout_below="@id/sub_id"/>
    <TextView
        android:id="@+id/bal_val"
        style="@style/title"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/d10"
        android:textStyle="bold"
        android:layout_below="@id/sub_id"
        android:layout_toRightOf="@id/balance"/>
    <TextView
        android:id="@+id/expiry"
        style="@style/Wrap"
        android:layout_marginLeft="@dimen/d16"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/d10"
        android:text="@string/expiry"
        android:layout_below="@id/balance"/>
    <TextView
        android:id="@+id/expiry_val"
        style="@style/title"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginBottom="@dimen/d10"
        android:textStyle="bold"
        android:layout_below="@id/balance"
        android:layout_toRightOf="@id/expiry"/>
</RelativeLayout>
</android.support.v7.widget.CardView>